<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/common_white_bg">

    <include
        android:id="@+id/share"
        layout="@layout/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/just_used_to_locate_01"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@id/just_used_to_locate_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="22.0dip"
                android:text="@string/share_hint1"
                android:textColor="#ff808080"
                android:textSize="15.0dip" />

            <ImageView
                android:id="@id/just_used_to_locate_02"
                android:layout_width="208.0dip"
                android:layout_height="210.0dip"
                android:layout_marginTop="24.0dip"
                android:src="@drawable/share_img_2wmbg" />

            <TextView
                android:id="@id/just_used_to_locate_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="18.0dip"
                android:text="@string/share_hint2"
                android:textColor="#ff808080"
                android:textSize="15.0dip" />

            <RelativeLayout
                android:id="@id/just_used_to_locate_04"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.0dip"
                android:gravity="center_horizontal"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip">

                <ImageView
                    android:id="@id/share_img_sina"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:src="@drawable/share_img_sina" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_sina"
                    android:layout_below="@id/share_img_sina"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="新浪微博"
                    android:textSize="12.0dip" />

                <ImageView
                    android:id="@id/share_img_qq"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/share_img_sina"
                    android:src="@drawable/share_img_qq" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_qq"
                    android:layout_below="@id/share_img_qq"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="腾讯QQ"
                    android:textSize="12.0dip" />

                <ImageView
                    android:id="@id/share_img_wechat"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/share_img_qq"
                    android:src="@drawable/share_img_wechat" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_wechat"
                    android:layout_below="@id/share_img_wechat"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="微信好友"
                    android:textSize="12.0dip" />

                <ImageView
                    android:id="@id/share_img_pyq"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/share_img_wechat"
                    android:src="@drawable/share_img_pyq" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_pyq"
                    android:layout_below="@id/share_img_pyq"
                    android:layout_marginTop="8.0dip"
                    android:text=" 朋友圈"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/just_used_to_locate_05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center_horizontal"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip">

                <ImageView
                    android:id="@id/share_img_qzone"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:src="@drawable/share_img_qzone" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_qzone"
                    android:layout_below="@id/share_img_qzone"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="QQ空间"
                    android:textSize="12.0dip" />

                <ImageView
                    android:id="@id/share_img_message"
                    android:layout_width="42.0dip"
                    android:layout_height="42.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/share_img_qzone"
                    android:src="@drawable/share_img_message" />

                <TextView
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/share_img_message"
                    android:layout_below="@id/share_img_message"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="短信   "
                    android:textSize="12.0dip" />

                <View
                    android:id="@id/just_used_to_locate_03"
                    android:layout_width="56.0dip"
                    android:layout_height="56.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/share_img_message" />

                <View
                    android:id="@id/just_used_to_locate_04"
                    android:layout_width="56.0dip"
                    android:layout_height="56.0dip"
                    android:layout_marginLeft="34.0dip"
                    android:layout_toRightOf="@id/just_used_to_locate_03" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>