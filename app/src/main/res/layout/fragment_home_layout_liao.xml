<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey_300"
    android:id="@+id/prl_homePager">

    <ScrollView

        android:id="@+id/scrollview_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_home_charts_big"
                    android:background="@color/common_white_bg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_touch_helper_swipe_escape_velocity">
                    <LinearLayout
                        android:paddingTop="20dip"
                        android:layout_marginLeft="20dip"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/item_touch_helper_swipe_escape_velocity"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/text_gray_w_a5"
                            android:textSize="12.0sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益（元）"/>

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:layout_marginTop="14dp"
                            android:textColor="#ffe25023"
                            android:textSize="40dp" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/item_touch_helper_swipe_escape_velocity"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/text_gray_w_a5"
                            android:textSize="12.0sp"
                            android:paddingTop="20dip"
                            android:layout_marginLeft="20dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="七天收益（元）"/>
                        <lecho.lib.hellocharts.view.LineChartView
                            android:id="@+id/lc_home_charts"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginBottom="22.0dip"
                    android:background="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_gray_dd" />
                <LinearLayout
                    android:id="@+id/ll_home_keyong"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/tab_me"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_img_balance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:text="@string/home_available"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="#ffe25023"
                        android:textSize="14.0sp"
                        android:text="0.00"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_btn_vector" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <LinearLayout
                    android:id="@+id/ll_home_lingqianbao"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/tab_me"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_img_coinpurse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:text="零钱包"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="#ffe25023"
                        android:textSize="14.0sp"
                        android:text="0.00"
                        android:visibility="visible" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_btn_vector" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <LinearLayout
                    android:id="@+id/ll_home_zongzichan"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/tab_me"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/index_img_zichan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:text="总资产"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/tv_fankui_title_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="#ffe25023"
                        android:textSize="14.0sp"
                        android:text="0.00"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_btn_vector" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <LinearLayout
                    android:id="@+id/ll_home_tiyanjin"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/tab_me"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/index_img_tiyan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:text="体验金"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_gray_w_a5"
                        android:textSize="14.0sp"
                        android:text="0.00"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_btn_vector" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginBottom="22.0dip"
                    android:background="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_gray_dd" />

                <LinearLayout
                    android:id="@+id/ll_home_invest"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/tab_me"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/index_img_mytouzi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:text="我的投资"
                        android:textColor="@color/black"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/tv_fankui_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textColor="@color/text_gray_w_a5"
                        android:textSize="14.0sp"
                        android:text="查看明细"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.0dip"
                        android:layout_marginRight="16.0dip"
                        android:src="@drawable/common_btn_vector" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_gray_dd" />
                <LinearLayout
                    android:background="@color/common_white_bg"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="10dip"
                        android:layout_marginLeft="20dip"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/notification_large_icon_height"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/text_gray_w_a5"
                            android:textSize="12.0sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待获收益（元）"/>
                        <TextView
                            android:text="0.00"
                            android:textSize="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffe25023"/>
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="10dip"
                        android:layout_marginLeft="20dip"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/abc_action_bar_default_height_material"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@color/text_gray_w_a5"
                            android:textSize="12.0sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待收本金（元）"/>
                        <TextView
                            android:text="0.00"
                            android:textSize="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffe25023"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/common_white_bg"
                    android:paddingLeft="68.0dip"
                    android:src="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginBottom="22.0dip"
                    android:background="@color/common_gray_dd" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_gray_dd" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>